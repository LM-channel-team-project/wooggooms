<ul>
  <% searchlistGroups.forEach(group => { %>
  <li class="search-list__item">
    <a href="/group/info/test">
      <!-- 추후 mainGroup.thumnail로 변경 필요 -->
      <img class="search-list__img" src="/public/img/test-thumnail.png" />
    </a>
    <table class="search-list__table">
      <tr>
        <th class="search-list__name" colspan="2">
          <a href="/group/info/test" class="search-list__link">
            <%= group.name %>
          </a>
        </th>
      </tr>
      <tr>
        <td class="search-list__loc">
          <a href="/group/info/test" class="search-list__link">
            <%= group.location %>
          </a>
        </td>
        <td class="search-list__num">
          <a href="/group/info/test" class="search-list__link">
            <%= group.current_number + '/' + group.maximum_number %>
          </a>
        </td>
      </tr>
      <tr>
        <td class="search-list__tag" colspan="2">
          <a href="/group/info/test" class="search-list__link color">
            <%= `#${group.main_category} #${group.sub_category}
            #${group.gender}` %>
          </a>
        </td>
      </tr>
    </table>
  </li>
  <% }) %>
</ul>
